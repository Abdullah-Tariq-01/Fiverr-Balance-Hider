{
  "manifest_version": 3,
  "name": "Fiverr Balance Hider",
  "version": "1.0.0",
  "description": "Instantly hide balance and earnings displays or show fake money on Fiverr",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://fiverr.com/*", "https://www.fiverr.com/*"],
  "content_scripts": [
    {
      "matches": ["https://fiverr.com/*", "https://www.fiverr.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://fiverr.com/*", "https://www.fiverr.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
